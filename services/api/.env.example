# FREEDOM API Gateway Configuration
# Copy to .env and customize for your environment

# Security
FREEDOM_API_KEY=your-secure-api-key-here

# Knowledge Base Service
KB_SERVICE_URL=http://kb-service:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://castle-gui:3000,https://freedom.yourdomain.com

# Rate Limiting
RATE_LIMIT=100/minute

# Logging
LOG_LEVEL=INFO

# Redis (for advanced rate limiting - optional)
REDIS_URL=redis://redis:6379

# Monitoring
METRICS_ENABLED=true