<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.freedom.rag-api</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Volumes/DATA/FREEDOM/scripts/start_rag_api.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Volumes/DATA/FREEDOM/services/rag_chunker</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PYTHONPATH</key>
        <string>/Volumes/DATA/FREEDOM/services/rag_chunker</string>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>

    <key>StandardOutPath</key>
    <string>/Volumes/DATA/FREEDOM/logs/rag-api.log</string>

    <key>StandardErrorPath</key>
    <string>/Volumes/DATA/FREEDOM/logs/rag-api-error.log</string>

    <key>ThrottleInterval</key>
    <integer>30</integer>
</dict>
</plist>